<h1>デザインパターン一覧</h1>
<div class="mx-10">
<%= link_to "新規作成", new_admin_design_pattern_path, class: "btn btn-primary" %>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @design_patterns.each do |pattern| %>
      <tr>
        <td><%= pattern.name %></td>
        <td>
          <%= link_to "編集", edit_admin_design_pattern_path(pattern) %> |
          <%= link_to "削除", admin_design_pattern_path(pattern),
            data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" },
            class: "text-red-500" %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>