<%= form_with(model: [:admin, design_pattern], class: "space-y-6") do |f| %>
  <div>
    <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
  </div>

  <div>
    <%= f.label :style_config, "Style Config (JSON)", class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_area :style_config, value: JSON.pretty_generate(@design_pattern.style_config || {}), rows: 20, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm font-mono" %>
    <p class="text-xs text-gray-500 mt-1">JSON 形式で入力してください。</p>
  </div>

  <div>
    <%= f.label :notes, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_area :notes, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
  </div>

  <div class="flex space-x-4">
    <%= f.submit "保存", class: "px-4 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-700" %>
    <%= link_to "一覧に戻る", admin_design_patterns_path, class: "px-4 py-2 bg-gray-300 rounded hover:bg-gray-400" %>
  </div>
<% end %>
